{
  "name": "fishbattery-launcher",
  "productName": "fishbattery-launcher",
  "version": "0.2.0",
  "private": true,
  "description": "Fishbattery launcher is an underwater-themed Fabric launcher with isolated instances and Modrinth mods.",
  "author": "Fishbattery",
  "main": "out/main/main.js",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "start": "electron-vite preview",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "qa:preflight": "npm run build"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.987.0",
    "@types/adm-zip": "^0.5.7",
    "adm-zip": "^0.5.16",
    "electron-updater": "^6.7.3",
    "electron-vite": "^2.3.0",
    "minecraft-launcher-core": "^3.17.2",
    "msmc": "^5.0.5",
    "node-fetch": "^3.3.2",
    "semver": "^7.6.3",
    "unzipper": "^0.12.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/semver": "^7.7.1",
    "@types/unzipper": "^0.10.11",
    "electron": "^31.0.0",
    "electron-builder": "^25.1.8",
    "typescript": "^5.6.3"
  },
  "build": {
    "appId": "com.fishbattery.launcher",
    "artifactName": "${productName}-${version}.${ext}",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**",
      "dist/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "runtime/java21",
        "to": "runtime/java21"
      }
    ],
    "asar": true,
    "compression": "maximum",
    "win": {
      "target": [
        "nsis"
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "fishbatteryapp",
        "repo": "FishbatteryLauncher"
      }
    ]
  }
}
